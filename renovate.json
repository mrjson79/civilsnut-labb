{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for civilsnut-labbet Kubernetes cluster",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeBranch"
  ],
  "timezone": "Europe/Stockholm",
  "schedule": [
    "before 6am on monday"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3,
  "platformAutomerge": true,
  "gitAuthor": "Renovate Bot <renovate@civilsnut.com>",
  "commitMessagePrefix": "chore:",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prTitle": "{{commitMessagePrefix}} {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "mrjson79"
  ],
  "reviewers": [
    "mrjson79"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [
      "mrjson79"
    ],
    "reviewers": [
      "mrjson79"
    ],
    "schedule": [
      "at any time"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/fluxcd/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/values\\.ya?ml$/",
      "/values/.+\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge digest updates",
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Critical security components - require manual review",
      "matchPackageNames": [
        "cert-manager",
        "argo-cd",
        "longhorn"
      ],
      "automerge": false,
      "labels": [
        "security-critical"
      ],
      "reviewers": [
        "mrjson79"
      ],
      "assignees": [
        "mrjson79"
      ]
    },
    {
      "description": "Networking components",
      "matchPackageNames": [
        "cilium",
        "ingress-nginx",
        "traefik"
      ],
      "labels": [
        "networking"
      ],
      "automerge": false,
      "groupName": "Networking Stack"
    },
    {
      "description": "Monitoring stack",
      "matchPackageNames": [
        "kube-prometheus-stack",
        "prometheus",
        "grafana",
        "alertmanager"
      ],
      "labels": [
        "monitoring"
      ],
      "groupName": "Monitoring Stack",
      "schedule": [
        "before 6am on saturday"
      ]
    },
    {
      "description": "Container images - patch updates can be auto-merged",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "labels": [
        "container-images",
        "automerge"
      ]
    },
    {
      "description": "Major updates require careful review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ],
      "reviewers": [
        "mrjson79"
      ],
      "assignees": [
        "mrjson79"
      ]
    },
    {
      "description": "Security updates have highest priority",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "alpine",
        "ubuntu",
        "debian"
      ],
      "labels": [
        "base-images",
        "security"
      ],
      "schedule": [
        "at any time"
      ]
    }
  ],
  "regexManagers": [
    {
      "description": "Update Helm chart versions in README.md tables",
      "fileMatch": ["^README\\.md$"],
      "matchStrings": [
        "\\| \\*\\*(?<displayName>[^*]+)\\*\\* \\| `v?(?<currentValue>[^`]+)` \\|"
      ],
      "datasourceTemplate": "helm",
      "packageNameTemplate": "{{#if (eq displayName 'Cilium')}}cilium{{else if (eq displayName 'cert-manager')}}cert-manager{{else if (eq displayName 'External Secrets')}}external-secrets{{else if (eq displayName 'Ingress NGINX')}}ingress-nginx{{else if (eq displayName 'Longhorn')}}longhorn{{else if (eq displayName 'kube-prometheus-stack')}}kube-prometheus-stack{{else}}{{toLowerCase displayName}}{{/if}}"
    }
  ],
  "hostRules": [
    {
      "matchHost": "charts.jetstack.io",
      "timeout": 30000
    },
    {
      "matchHost": "charts.longhorn.io",
      "timeout": 30000
    },
    {
      "matchHost": "argoproj.github.io",
      "timeout": 30000
    },
    {
      "matchHost": "prometheus-community.github.io",
      "timeout": 30000
    },
    {
      "matchHost": "helm.cilium.io",
      "timeout": 30000
    }
  ],
  "ignoreDeps": [
    "localhost/**",
    "*:latest",
    "*:main"
  ]
}
