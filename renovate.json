{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for civilsnut-labbet Kubernetes cluster",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeBranch"
  ],
  "timezone": "Europe/Stockholm",
  "schedule": [
    "before 6am on monday"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 3,
  "platformAutomerge": true,
  "gitAuthor": "Renovate Bot <renovate@civilsnut.com>",
  "commitMessagePrefix": "chore:",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prTitle": "{{commitMessagePrefix}} {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "mrjson79"
  ],
  "reviewers": [
    "mrjson79"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [
      "mrjson79"
    ],
    "reviewers": [
      "mrjson79"
    ],
    "schedule": [
      "at any time"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.ya?ml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/fluxcd/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/values\\.ya?ml$/",
      "/values/.+\\.ya?ml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge digest updates",
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": "Critical security components - require manual review",
      "matchPackageNames": [
        "cert-manager",
        "argo-cd",
        "longhorn"
      ],
      "automerge": false,
      "labels": [
        "security-critical"
      ],
      "reviewers": [
        "mrjson79"
      ],
      "assignees": [
        "mrjson79"
      ]
    },
    {
      "description": "Networking components",
      "matchPackageNames": [
        "cilium",
        "ingress-nginx",
        "traefik"
      ],
      "labels": [
        "networking"
      ],
      "automerge": false,
      "groupName": "Networking Stack"
    },
    {
      "description": "Monitoring stack",
      "matchPackageNames": [
        "kube-prometheus-stack",
        "prometheus",
        "grafana",
        "alertmanager"
      ],
      "labels": [
        "monitoring"
      ],
      "groupName": "Monitoring Stack",
      "schedule": [
        "before 6am on saturday"
      ]
    },
    {
      "description": "Container images - patch updates can be auto-merged",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "labels": [
        "container-images",
        "automerge"
      ]
    },
    {
      "description": "Major updates require careful review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ],
      "reviewers": [
        "mrjson79"
      ],
      "assignees": [
        "mrjson79"
      ]
    },
    {
      "description": "Security updates have highest priority",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "alpine",
        "ubuntu",
        "debian"
      ],
      "labels": [
        "base-images",
        "security"
      ],
      "schedule": [
        "at any time"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update versions in README.md",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "\\| \\*\\*Cilium\\*\\* \\| `(?<currentValue>[^`]+)` \\|"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "cilium"
    },
    {
      "customType": "regex",
      "description": "Update cert-manager version in README.md",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "\\| \\*\\*cert-manager\\*\\* \\| `v?(?<currentValue>[^`]+)` \\|"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "cert-manager"
    },
    {
      "customType": "regex",
      "description": "Update External Secrets version in README.md",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "\\| \\*\\*External Secrets\\*\\* \\| `(?<currentValue>[^`]+)` \\|"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "external-secrets"
    },
    {
      "customType": "regex",
      "description": "Update Ingress NGINX version in README.md",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "\\| \\*\\*Ingress NGINX\\*\\* \\| `(?<currentValue>[^`]+)` \\|"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "ingress-nginx"
    },
    {
      "customType": "regex",
      "description": "Update Longhorn version in README.md",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "\\| \\*\\*Longhorn\\*\\* \\| `(?<currentValue>[^`]+)` \\|"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "longhorn"
    },
    {
      "customType": "regex",
      "description": "Update kube-prometheus-stack version in README.md",
      "managerFilePatterns": [
        "/^README\\.md$/"
      ],
      "matchStrings": [
        "\\| \\*\\*kube-prometheus-stack\\*\\* \\| `(?<currentValue>[^`]+)` \\|"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "kube-prometheus-stack"
    }
  ],
  "hostRules": [
    {
      "matchHost": "charts.jetstack.io",
      "timeout": 30000
    },
    {
      "matchHost": "charts.longhorn.io",
      "timeout": 30000
    },
    {
      "matchHost": "argoproj.github.io",
      "timeout": 30000
    },
    {
      "matchHost": "prometheus-community.github.io",
      "timeout": 30000
    },
    {
      "matchHost": "helm.cilium.io",
      "timeout": 30000
    }
  ],
  "ignoreDeps": [
    "localhost/**",
    "*:latest",
    "*:main"
  ]
}
